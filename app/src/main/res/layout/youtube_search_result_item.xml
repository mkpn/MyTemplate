<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.template.entity.SearchResult" />

        <variable
            name="searchResult"
            type="SearchResult" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_x1"
        android:layout_marginRight="@dimen/dp_x1"
        android:layout_marginTop="@dimen/dp_x1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="@dimen/px321_as_dp"
                android:layout_height="@dimen/px180_as_dp"
                android:layout_centerVertical="true"
                bind:thumbnailUrl="@{searchResult.snippet.thumbnails.medium.url}"
                tools:src="@drawable/ic_dashboard" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/thumbnail"
                android:ellipsize="end"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:text="@{searchResult.snippet.title}"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black"
                tools:text="ここにはタイトルが入ります" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_below="@+id/title"
                android:scrollHorizontally="true"
                android:text="@{searchResult.contentDetails.duration}"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black"
                tools:text="3:00" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>